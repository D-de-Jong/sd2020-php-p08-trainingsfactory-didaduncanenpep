                    <td>{{ member.achternaam }}</td>
                    <td>{{ member.gender }}</td>
                    <td>{{ member.adres  }}</td>
                    <td>{{ member.postcode }}</td>
                    <td>{{ member.woonplaats }}</td>
                    <td> <a href="{{ path('updateInstructor',{'id':member.id}) }}">update</a></td>
                    <td> <a href="{{ path('deleteInstructor',{'id':member.id}) }}">update</a></td>




                </tr>
            {% endif %}
