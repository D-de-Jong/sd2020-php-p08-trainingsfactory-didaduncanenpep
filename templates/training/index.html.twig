{% extends 'base.html.twig' %}
{% block body %}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Home</title>
        <link rel="stylesheet" href="css/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    </head>
    <body>
    <!-- Navbar -->
    <div class="container-fluid">
        <div class="row">
            <nav class="navbar navbar-expand-lg navbar-light bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand text-light" href="#"><img src="img/pizza.png" alt="" style="width: 110px;"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/pizza/home" tabindex="-1" aria-disabled="true">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/pizza/bestel" tabindex="-1" aria-disabled="true">Bestellen</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/contact" tabindex="-1" aria-disabled="true">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" href="{{ path ('login') }}" tabindex="-1" aria-disabled="true">inloggen</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!-- Header -->
    <div class="img-bg"></div><br>

    <!-- Tekst -->
    <h2 class="container-fluid text-center">
        Welkom bij TrainingFactory
    </h2>
    <p class="container-fluid text-center">
        Wij zijn de beste sportschool in uw omgeving.
    </p>


    <!-- Cards -->
    {% for training in trainings %}
        <div class="container">
            <div class="col">
            <div class="card" >
                <img class="card-img-top" src="{{ asset(training.image) }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ training.name }}</h5>
                    <p class="card-text">{{ training.description }}</p>
                    <p class="card-text">{{ training.duration }}</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
            </div>
        </div>
    {% endfor %}



    </body>
    </html>

    {% endblock %}

